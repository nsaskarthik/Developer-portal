{
  "name": "Angular Developer Portal",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  "postCreateCommand": "npm install -g @angular/cli",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "angular.ng-template",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [4200],
  "features": {},
  "remoteUser": "node"
}
